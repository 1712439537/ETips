<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_bg_about2"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_nav_bg_nomal"
        android:orientation="horizontal" android:alpha="0.7">

        <RelativeLayout
            android:id="@+id/acty_about_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_back" />
        </RelativeLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_head_line" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.header_title"
                android:layout_centerInParent="true"
                android:text="关于" />
        </RelativeLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_head_line"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/btn_more"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue"
            android:clickable="true" >

            <TextView
                style="@style/TextView.header_title"
                android:layout_centerInParent="true"
                android:text="清空"
                android:textSize="14sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/acty_about_title" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="20dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                style="@style/TextView.Base"
                android:layout_width="fill_parent"
                android:layout_gravity="center"
                android:text="反馈,产品建议:"
                android:textColor="@color/grey_lv_third"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                style="@style/TextView.Base"
                android:layout_marginTop="10dp"
                android:text="新浪微博：\n @邑点通_ETips  @袂卓移动开发工作室"
                android:textColor="@color/grey_lv_third"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                style="@style/TextView.Base"
                android:layout_marginTop="10dp"
                android:text="微信公众账号:邑点通"
                android:textColor="@color/grey_lv_third"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView9"
                style="@style/TextView.Base"
                android:layout_marginTop="7dp"
                android:text="图片： @邑大印象 "
                android:textColor="@color/grey_lv_third"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                style="@style/TextView.Base"
                android:layout_marginTop="7dp"
                android:text="版本：2.1"
                android:textColor="@color/grey_lv_third"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        style="@style/TextView.Base"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:gravity="center_horizontal"
        android:text="©2013-2014 袂卓工作室 All Rights Reserved"
        android:textColor="@color/black"
        android:textSize="10sp" />

</LinearLayout>