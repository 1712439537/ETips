<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/acty_course_main_navbar"
            style="@style/Base_Navigation_rely_top"
            android:background="@drawable/ic_bg_tweet" 
            >

            <Button
                android:id="@+id/acty_course_main_switcher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@drawable/btn_common_blue"
                android:text="每 日"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acty_course_main_tv_weekday"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="第一周星期一"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/acty_course_main_setting"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/btn_settting_style_one" />
        </RelativeLayout>

        <ViewFlipper
            android:id="@+id/acty_course_main_middle"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/acty_course_main_navbar" >

            <RelativeLayout
                android:id="@+id/acty_course_main_allweek"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/ic_bg_course"
                android:visibility="visible" 
                android:drawingCacheQuality="auto"
                android:animationCache="true" android:alwaysDrawnWithCache="true"
                >

                <LinearLayout
                    android:id="@+id/acty_course_main_timeline"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="一"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="三"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="四"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="五"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <ListView
                    android:id="@+id/acty_course_main_listview1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/acty_course_main_timeline"
                    android:background="@null"
                    android:visibility="visible"
                    android:listSelector="@color/lucency_white"  android:clipChildren="true">
                </ListView>
            </RelativeLayout>

            <android.support.v4.view.ViewPager
                android:id="@+id/acty_course_main_viewpager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="gone" >
            </android.support.v4.view.ViewPager>
        </ViewFlipper>
    </RelativeLayout>

</RelativeLayout>