<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- 后面的添加直接复制 下面的RelativeLayout即可~ -->


            <RelativeLayout
                android:id="@+id/rely_currentWeek"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="当前周数" />

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/Acty_Course_Setting.imageview" />

                <TextView
                    android:id="@+id/tv_currentWeek"
                    style="@style/TextView.setting"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:text="1"
                    android:textSize="15sp" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_line_1" />

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_cleanAuthorization"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="清除新浪微博授权" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_line_1" />

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_declaration"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="软件声明" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_line_1" />

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_share"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="分享软件" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/ic_line_1" />

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_aboutus"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="关于我们" />

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>