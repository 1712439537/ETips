<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey" android:orientation="vertical" >
 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_nav_bg_nomal"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/acty_etips_main_setting_back"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue"
            android:clickable="true" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_action_back" />
        </RelativeLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_head_line" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4" >

            <TextView
                android:id="@+id/tv_title"
                style="@style/TextView.header_title"
                android:layout_centerInParent="true"
                android:text="设置" />
        </RelativeLayout>

        <ImageView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@drawable/ic_head_line"  android:visibility="invisible"/>

        <RelativeLayout
            android:id="@+id/btn_more"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/btn_blue"
            android:clickable="true" >
            <TextView
                style="@style/TextView.header_title"
                android:layout_centerInParent="true"
                android:text="清空"
                android:textSize="14sp" android:visibility="invisible"/>
        </RelativeLayout>
    </LinearLayout>
 
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/acty_etips_main_setting_navigate" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 后面的添加直接复制 下面的RelativeLayout即可~ -->

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_account"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    android:id="@+id/acty_etips_main_setting_tv_accountInfo"
                    style="@style/TextView.setting"
                    android:text="ETips账户登录" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_checkSource"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="查询成绩" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_manual"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="学生手册" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>
            
            
            <RelativeLayout
                android:id="@+id/rely_currentWeek"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="当前周数" />

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/Acty_Course_Setting.imageview" />

                <TextView
                    android:id="@+id/tv_currentWeek"
                    style="@style/TextView.setting"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView1"
                    android:text="1周"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_cleanAuthorization"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="清除新浪微博授权" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_declaration"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="软件声明" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_share"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="分享软件" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_aboutus"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/TextView.setting"
                    android:text="关于我们" />

                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

  
</LinearLayout>