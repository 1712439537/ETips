<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/grey" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/acty_etips_main_setting_navigate" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- 后面的添加直接复制 下面的RelativeLayout即可~ -->

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_share"
                style="@style/Acty_Course_Setting.rely" >

                <TextView
                    style="@style/Acty_Course_Setting.textview"
                    android:text="分享" />

                <ImageView style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_etips_main_setting_rely_aboutus"
                style="@style/Acty_Course_Setting.rely" >
                <TextView
                    style="@style/Acty_Course_Setting.textview"
                    android:text="关于我们" />
                <ImageView
                    android:id="@+id/imageView1"
                    style="@style/Acty_Course_Setting.imageview" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/acty_etips_main_setting_navigate"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_navigate_bg_black" >

        <Button
            android:id="@+id/acty_etips_main_setting_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_grey" />

        <Button
            android:id="@+id/acty_etips_main_setting_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            android:background="@drawable/btn_edit_white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/acty_etips_main_setting_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </RelativeLayout>

</RelativeLayout>