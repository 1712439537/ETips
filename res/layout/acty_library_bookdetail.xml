<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/acty_library_bookdetail_title"
        style="@style/Base_Navigation_rely_top" >

        <TextView
            android:id="@+id/acty_library_bookdetail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="10"
            android:gravity="center"
            android:singleLine="true"
            android:text="think in java"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/acty_library_bookdetail_navigate"
        android:layout_below="@+id/acty_library_bookdetail_title" >

        <RelativeLayout
            android:id="@+id/acty_library_bookdetail_re_presstime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/btn_setting_sigleitem"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acty_library_bookdetail_tv_presstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:singleLine="true"
                android:text="出版时间:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acty_library_bookdetail_presstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/acty_library_bookdetail_tv_presstime"
                android:padding="8dp"
                android:singleLine="true"
                android:text="2012.10"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/acty_library_bookdetail_re_press"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acty_library_bookdetail_re_presstime"
            android:layout_margin="5dp"
            android:background="@drawable/btn_setting_sigleitem"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/acty_library_bookdetail_tv_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:singleLine="true"
                android:text="出版社:"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/acty_library_bookdetail_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/acty_library_bookdetail_tv_press"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:padding="8dp"
                android:singleLine="true"
                android:text="Publishing House of Electronics Industry"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignLeft="@+id/acty_library_bookdetail_re_press"
            android:layout_below="@+id/acty_library_bookdetail_re_press"
            android:layout_margin="5dp"
            android:background="@drawable/ic_dialog_bg_white" >

            <ProgressBar
                android:id="@+id/acty_library_bookdetail_progressBar"
                style="@style/Base_ProgressBar"
                android:layout_centerInParent="true"
                android:visibility="visible" />

            <ListView
                android:id="@+id/acty_library_bookdetail_listview"
                style="@style/ListView_Base"
                android:visibility="gone" >
            </ListView>

            <TextView
                android:id="@+id/acty_library_bookdetail_tv_words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/acty_library_bookdetail_progressBar"
                android:layout_centerHorizontal="true"
                android:text="ETips is loading...."
                android:textColor="@color/black"
                android:textSize="15sp"
                android:visibility="visible" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_library_bookdetail_navigate"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_navigate_bg_black" >

        <Button
            android:id="@+id/acty_library_bookdetail_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_grey" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="图书详情"
            android:textColor="@color/white"
            android:textSize="25sp" >
        </TextView>
    </RelativeLayout>

</RelativeLayout>