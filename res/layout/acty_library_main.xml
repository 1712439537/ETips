<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
      
        android:background="@drawable/ic_bg_library_main" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/acty_library_main_searchBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_library_search_barl"
            android:alpha="0.85"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/acty_library_main_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_library_search_bar_icon_" />

            <EditText
                android:id="@+id/acty_library_main_search_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/acty_library_main_imageview"
                android:background="@color/white"
                android:hint="图书名"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp" 
                android:textStyle="bold">
            </EditText>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acty_library_main_searchBar"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="12dp"
            android:baselineAligned="false"
            android:orientation="horizontal" 
          >

            <RelativeLayout
                android:id="@+id/acty_library_main_collections"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                 android:background="@drawable/btn_round_blacklighter" 
                android:alpha="0.8" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="收 藏"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_library_main_login"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"  android:layout_margin="2dp"
                android:background="@drawable/btn_item_gridview_style_one"
                android:visibility="gone" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="个人"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/acty_library_main_commonSearch"
                android:layout_width="110dp"
                android:layout_height="70dp"
                android:layout_weight="1"  android:layout_margin="2dp"
                android:background="@drawable/btn_round_blacklighter"   >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text="搜  索"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
   

</RelativeLayout>