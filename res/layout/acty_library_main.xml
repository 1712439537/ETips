<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/acty_library_main_navigate"
        android:background="@drawable/ic_bg_library_main" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/acty_library_main_searchBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_library_search_barl"
            android:padding="5dp" >

            <ImageView
                android:id="@+id/acty_library_main_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_library_search_bar_icon_" />

            <EditText
                android:id="@+id/acty_library_main_search_edit"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/acty_library_main_imageview"
                android:background="@color/white"
                android:hint="图书名"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="18sp" >
            </EditText>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/acty_library_main_commonSearch"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_below="@+id/acty_library_main_searchBar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_item_gridview_style_one" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="搜  索"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/acty_library_main_navigate"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/ic_navigate_bg_black" >

        <Button
            android:id="@+id/acty_library_main_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_back_grey" />

        <TextView
            android:id="@+id/acty_library_main_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="图书馆"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <Button
            android:id="@+id/acty_library_main_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@drawable/btn_back_black"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>