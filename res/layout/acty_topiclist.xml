<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bg_tweet" >

        <Button
            android:id="@+id/acty_topiclist_btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_round" />

        <TextView
            android:id="@+id/acty_topiclist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:text="校园资讯"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/acty_topiclist_btn_setting"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_header_setting"
            android:gravity="center" />
    </RelativeLayout>

    <com.meizhuo.etips.widget.PullToRefreshListView
        android:id="@+id/acty_topiclist_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.meizhuo.etips.widget.PullToRefreshListView>

</LinearLayout>