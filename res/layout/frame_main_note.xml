<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:background="@color/yellow"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/frame_main_head" >

        <TextView
            android:id="@+id/frame_main_note_title"
            style="@style/TextView.common"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:text="个人便签"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/frame_main_note_btn_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_add" />
    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/frame_main_note_flipper"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/yellow"
        android:flipInterval="1800" >
    </ViewFlipper>

</LinearLayout>