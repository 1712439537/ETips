<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:background="@drawable/btn_item_gridview_style_one" >

        <TextView
            android:id="@+id/item_library_searchresult_bookname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Think in Java"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/item_library_searchresult_imageview1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/item_library_searchresult_bookname"
            android:layout_below="@+id/item_library_searchresult_bookname"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_item_library_author" />

        <TextView
            android:id="@+id/item_library_searchresult_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_library_searchresult_imageview1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_library_searchresult_imageview1"
            android:ellipsize="end"
            android:ems="8"
            android:text="韩顺平"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:singleLine="true"
           />

        <TextView
            android:id="@+id/item_library_searchresult_askid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_library_searchresult_imageview2"
            android:layout_alignLeft="@+id/item_library_searchresult_author"
            android:ellipsize="end"
            android:ems="8"
            android:text="TP393.092/G96b(2)"
            android:textColor="@color/white"
            android:singleLine="true"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_library_searchresult_imageview3"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignTop="@+id/item_library_searchresult_author"
            android:layout_toRightOf="@+id/item_library_searchresult_author"
            android:src="@drawable/ic_library_bookdetail_blue" 
            android:layout_marginLeft="5dp"/>

        <TextView
            android:id="@+id/item_library_searchresult_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_library_searchresult_imageview3"
            android:layout_alignBottom="@+id/item_library_searchresult_imageview3"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_library_searchresult_imageview3"
            android:ellipsize="end"
            android:ems="8"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_library_searchresult_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_library_searchresult_total"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/item_library_searchresult_imageview1"
            android:ellipsize="end"
            android:ems="8"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/item_library_searchresult_imageview2"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@+id/item_library_searchresult_left"
            android:layout_alignLeft="@+id/item_library_searchresult_imageview1"
            android:layout_alignRight="@+id/item_library_searchresult_imageview1"
            android:src="@drawable/ic_library_bookdetail_purple" />

        <ImageView
            android:id="@+id/item_library_searchresult_imageview4"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_alignBottom="@+id/item_library_searchresult_left"
            android:layout_toLeftOf="@+id/item_library_searchresult_total"
            android:src="@drawable/ic_library_bookdetail_greeb" />

    </RelativeLayout>

</RelativeLayout>