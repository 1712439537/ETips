<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_item_whit2grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_schoolnew_main_listview_title"
            style="@style/TextView.Base"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="关于开展2012～2013年广东省优秀专业镇中小微企业服务平台评选工作的通知"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/item_schoolnew_main_listview_image1"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_school_news_item_blue" />

            <TextView
                android:id="@+id/item_schoolnew_main_listview_time"
                style="@style/TextView.Base"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="2013年8月1日22:4"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/item_schoolnew_main_listview_image2"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:src="@drawable/ic_school_news_item_red" />

            <TextView
                android:id="@+id/item_schoolnew_main_listview_from"
                style="@style/TextView.Base"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="发布单位：宣传部"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_line_1" />
    </LinearLayout>

</RelativeLayout>