<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:alpha="0.9"
    android:background="@color/lucency_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:alpha="1"
        android:background="@drawable/frame_main_head" >

        <TextView
            android:id="@+id/widget_notes_note_title"
            style="@style/TextView.Base"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="个人便签"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp" >

            <Button
                android:id="@+id/widget_notes_btn_addNote"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_add" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/widget_notes_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       
        android:alpha="0.9"
        android:background="@drawable/item_note" >

        <TextView
            android:id="@+id/widget_notes_tv_content"
             android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:text="随时随地，记录生活点滴"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14.0sp" />
    </RelativeLayout>

</LinearLayout>