<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:alpha="0.9"
    android:background="@color/black_lighter"
    android:orientation="vertical" >

    <!-- android:background="@color/black_lighter" -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/widget_notes_note_title"
            style="@style/TextView.Base"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="个人便签"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_previous"
            style="@style/ImageView.base"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_action_back" />

        <ImageView
            android:id="@+id/iv_next"
            style="@style/ImageView.base"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:background="@drawable/ic_action_next" />

        <ImageView
            android:id="@+id/widget_notes_btn_addNote"
            style="@style/ImageView.base"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_action_new" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_line_1" />

    <RelativeLayout
        android:id="@+id/widget_notes_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/widget_notes_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:padding="4dp"
            android:text="随时随地，记录生活点滴"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>